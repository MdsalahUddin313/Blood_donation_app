<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.Map">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/map_layout_one_id"
        android:orientation="vertical">

        <Spinner
            android:id="@+id/planets_spinner_blood_group_id"
            android:layout_width="match_parent"
            android:padding="25dp"
            android:layout_marginRight="35dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/spinner_background"
            android:autofillHints="Choose Blood Type"
            android:layout_height="wrap_content" />


        <Spinner
            android:id="@+id/spinner_blood_donor_zillalist_id"
            android:layout_width="match_parent"
            android:padding="25dp"
            android:background="@drawable/spinner_background"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
           android:layout_marginRight="35dp"
            android:layout_marginLeft="35dp"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/map_layout_one_id"
       android:background="@drawable/image_one"></ImageView>


</RelativeLayout>