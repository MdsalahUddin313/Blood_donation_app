<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15sp"
                android:padding="5sp"
                android:text="Core Features:"
                android:textColor="@android:color/black"
                android:textSize="35sp"></TextView>

            <TextView
                android:id="@+id/text_features"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35sp"
                android:padding="10dp"
                android:text="@string/one"
                android:textColor="@android:color/darker_gray"
                android:textSize="20dp"></TextView>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15sp"
                android:padding="5sp"
                android:text="Our Project steps:"
                android:textColor="@android:color/black"
                android:textSize="35sp"></TextView>

            <TextView
                android:id="@+id/text_steps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35sp"
                android:padding="10dp"

                android:text="@string/two"
                android:textColor="@android:color/darker_gray"
                android:textSize="20dp"></TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15sp"
                android:padding="5sp"
                android:text="Our Terms:"
                android:textColor="@android:color/black"
                android:textSize="35sp"></TextView>

            <TextView
                android:id="@+id/text_terms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35sp"
                android:padding="10dp"
                android:text="@string/three"

                android:textColor="@android:color/darker_gray"
                android:textSize="20dp"></TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15sp"
                android:padding="5sp"
                android:text="What we do till now:"
                android:textColor="@android:color/black"
                android:textSize="35sp"></TextView>

            <TextView
                android:id="@+id/text_our_work"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35sp"
                android:padding="10dp"

                android:text="@string/four"
                android:textColor="@android:color/darker_gray"
                android:textSize="20dp"></TextView>

            <Button
                android:id="@+id/btn_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/hero_background"
                android:padding="25dp"
                android:text="Accept"
                android:textColor="@android:color/white"
                android:textSize="35dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>