<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.blooddonationapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo2removebg"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Request_user.Request_donor_for_donate"
            android:parentActivityName=".Third_part"></activity>
        <activity android:name=".Request_user.Request_for_blood"
            android:parentActivityName=".Third_part"/>
        <activity
            android:name=".Profiles.Users_profile"
            android:parentActivityName=".Third_part" />
        <activity
            android:name=".Third_part"
            android:theme="@style/AppTheme_NoActionbar" />
        <activity
            android:name=".Auth.Signup"
            android:theme="@style/AppTheme_NoActionbar" />
        <activity
            android:name=".Auth.Login"
            android:theme="@style/AppTheme_NoActionbar" />
        <activity
            android:name=".splash_screen"
            android:theme="@style/AppTheme_NoActionbar" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>